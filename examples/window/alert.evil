@ Showcasing the simplest form of using the window @

use system
use window

[
    version 2.0
    output alert
    os linux
    arch amd64
    obfuscate false
    debugger_behavior stop
]

b html {
    window::js("window.alert('Hello, world!')")
    window::run()
}

l loop {
    system::exit("0")
}